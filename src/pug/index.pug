extends base.pug

mixin content-block(logo_url, title, url, description)
  div.content-block
    div.project-logo.alpha.rounded
      img(src=logo_url)
    div.description.alpha.rounded
      h5
        a(href=url)
          =title

      sspace
      sspace

      span.big
        =description

block content
  header.big
    div.svg#logo
      img(src="/static/svg/circle.svg")
    div.fline
      div.me
        h1
          | Я
      div.line
        svg(width="100%" height="35")
          rect(fill="#000" width="100%" height="100%")
    h2
      | Адам Арутюнов

  mspace

  div#main
    div.svg#oval
      img(src="/static/svg/oval.svg")
    div.svg#line
      img(src="/static/svg/line.svg")
    div.svg#hexagon
      img(src="/static/svg/hexagon.svg")

    span.big
      | Пишу код и текст. Живу в Ростове-на-Дону. 
      a.dashed(href="#contact")
        |Написать

    
    #code
  
    +content-block("/static/img/pycon/logo.png", "Пáйкон", "/pycon", "Тестирующая система для проведения работ и контестов по алгоритмическому программированию. Финальный проект Яндекс.Лицея. Прошёл тестирование на реальных студентах.")
    +content-block("/static/img/chekker/logo.png", "Чеккер", "/chekker", "Платформа для проверки знаний с помощью тестов. Автоматизирует учебный процесс в тысячу раз, масштабируется бесконечно. Проходит альфа-тестирование.")
